  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/tweets/">pictweet-Neo</a></h1>
        <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <%= link_to "my page", "/users/#{current_user.id}" %>
                <%= link_to "log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </span>
          <%= link_to "Tweet", "/tweets/new", class: "post" %>
          <%# <a class="post" href="/tweets/new">ツブヤク</a> %>
        </div>
        <% else %>
        <div class="grid-6">
          <%= link_to "log in", new_user_session_path, class: "post" %>
          <%= link_to "register", new_user_registration_path, class: "post" %>
        </div>
        <% end %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <%= link_to root_path, class: "post" do %>
        back to snack hikaru
      <% end %>
      <p> Copyright(C) mamiko.kikaku ALL RIGHTS RESERVED</p>
    </footer>
  </body>
</html>